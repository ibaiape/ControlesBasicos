<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="com.example.dm2.layouts2.Ejercicio6">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Cámara 1:"
            android:textSize="20dp"
            android:textColor="#000"/>
        <Switch
            android:id="@+id/switchCamara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="clickCamara1"
            android:checked="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Luz 1:"
            android:textSize="20dp"
            android:textColor="#000"/>
        <Switch
            android:id="@+id/switchLuz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="clickLuz1"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Cámara 2:"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"/>

        <ToggleButton
            android:id="@+id/toggleCamara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="SI"
            android:textOff="NO"
            android:checked="true"
            android:layout_alignParentRight="true"
            android:onClick="clickCamara2"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Luz 2:"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"/>
        <ToggleButton
            android:id="@+id/toggleLuz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="SI"
            android:textOff="NO"
            android:checked="false"
            android:layout_alignParentRight="true"
            android:onClick="clickLuz2"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btnCamara1"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@drawable/camara"
            android:layout_weight="1"
            android:clickable="false"/>
        <ToggleButton
            android:id="@+id/toggleBombilla1"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@drawable/bombilla"
            android:textOn=""
            android:textOff=""
            android:checked="false"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:clickable="false"/>
        <Button
            android:id="@+id/btnCamara2"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@drawable/camara"
            android:layout_weight="1"
            android:clickable="false"/>
        <ToggleButton
            android:id="@+id/toggleBombilla2"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@drawable/bombilla"
            android:textOn=""
            android:textOff=""
            android:checked="false"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:clickable="false"/>
    </LinearLayout>

</LinearLayout>
